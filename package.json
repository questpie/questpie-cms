{
	"name": "questpie-cms",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "bun run clean:lock && bun run clean:artifacts && bun run clean:nm",
		"clean:artifacts": "bunx rimraf --glob './**/{dist,build,out,.next}'",
		"clean:lock": "bunx rimraf --glob ./**/bun.lock",
		"clean:nm": "bunx rimraf --glob ./**/node_modules",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types",
		"test": "QUESTPIE_MIGRATIONS_SILENT=1 bun test",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "turbo run build --filter='./packages/*' && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"fumadocs-typescript": "^5.0.0",
		"prettier": "^3.7.4",
		"shadcn": "^3.6.3",
		"turbo": "^2.6.3",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.0",
	"workspaces": [
		"apps/*",
		"packages/*",
		"examples/*"
	],
	"dependencies": {
		"server-only": "^0.0.1"
	}
}
