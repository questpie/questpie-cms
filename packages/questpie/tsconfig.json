{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["bun-types"],
		"paths": {
			"#questpie/*": ["./src/*"]
		}
	},
	"include": ["src", "test/types"],
	"exclude": ["node_modules", "dist"]
}
